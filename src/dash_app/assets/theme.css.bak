:root {
  --radius: 16px;
  --shadow: 0 2px 10px rgba(0, 0, 0, 0.08);
  --shadow-hover: 0 4px 20px rgba(0, 0, 0, 0.12);
  --bg: #F8F9FA;
  --paper: #FFFFFF;
  --text: #212529;
  --muted: #6E7781;
  --primary: #1F77B4;
  --secondary: #2CA02C;
  --accent: #00AEEF;
  --warning: #F9A825;
  --neutral: #E9ECEF;
  --font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
  background-color: var(--bg);
  color: var(--text);
  font-family: var(--font-family);
  margin: 0;
  line-height: 1.5;
}

.app-root {
  background: var(--bg);
  min-height: 100vh;
}

.layout {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.topbar {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(15, 23, 42, 0.06);
  box-shadow: 0 6px 22px rgba(15, 23, 42, 0.06);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 24px;
  padding: 18px 40px;
}

.topbar-brand {
  display: flex;
  flex-direction: column;
  gap: 2px;
  min-width: 180px;
}

.topbar-title {
  font-weight: 700;
  font-size: 1.05rem;
  letter-spacing: 0.04em;
  color: var(--primary);
}

.topbar-subtitle {
  font-size: 0.85rem;
  color: var(--muted);
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.topbar-links {
  flex: 1 1 auto;
  display: flex;
  justify-content: center;
}

.top-nav {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  width: 100%;
}

.nav-link-modern {
  border-radius: 999px !important;
  padding: 10px 18px !important;
  font-weight: 600;
  font-size: 0.95rem;
  letter-spacing: 0.02em;
  color: var(--muted) !important;
  background: rgba(30, 144, 255, 0.08) !important;
  border: 1px solid transparent !important;
  transition: var(--transition);
}

.nav-link-modern:hover,
.nav-link-modern:focus {
  color: var(--primary) !important;
  background: rgba(30, 144, 255, 0.16) !important;
  transform: translateY(-1px);
}

.nav-link-modern.active {
  color: #0b4d88 !important;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.75), rgba(0, 179, 134, 0.75)) !important;
  box-shadow: 0 10px 24px rgba(30, 144, 255, 0.18);
  border-color: rgba(30, 144, 255, 0.35) !important;
}

.topbar-meta {
  display: flex;
  flex-direction: column;
  gap: 6px;
  min-width: 160px;
  align-items: flex-end;
}

.topbar-footnote {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--muted);
}

.topbar-palette {
  display: flex;
  gap: 8px;
}

.topbar-palette div {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  box-shadow: 0 2px 6px rgba(15, 23, 42, 0.1);
}

.content {
  flex: 1 1 auto;
  width: 100%;
  max-width: 1320px;
  margin: 0 auto;
  padding: 96px 40px 56px;
  box-sizing: border-box;
}

.content > .page-body,
.content > .page-body-compact {
  margin-top: 0;
}

.app-shell {
  display: flex;
  gap: 24px;
  min-height: 100vh;
  background: var(--bg);
}

.sidebar {
  width: 280px;
  background: linear-gradient(135deg, rgba(31, 119, 180, 0.05) 0%, var(--paper) 100%);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: sticky;
  top: 24px;
  height: fit-content;
}

.sidebar .logo {
  font-weight: 700;
  font-size: 22px;
  letter-spacing: 0.02em;
  color: var(--primary);
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.sidebar-nav {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.sidebar-nav .nav-link {
  display: block;
  padding: 14px 18px;
  border-radius: var(--radius);
  text-decoration: none;
  font-weight: 600;
  color: var(--muted);
  background: transparent;
  transition: var(--transition);
  position: relative;
  border-left: 3px solid transparent;
}

.sidebar-nav .nav-link:hover {
  background: rgba(31, 119, 180, 0.08);
  color: var(--primary);
  transform: translateX(2px);
}

.sidebar-nav .nav-link.active {
  background: rgba(31, 119, 180, 0.12);
  color: var(--primary);
  border-left-color: var(--primary);
  box-shadow: 0 2px 8px rgba(31, 119, 180, 0.15);
}

.header-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: var(--paper);
  border-bottom: 1px solid var(--neutral);
  padding: 8px 24px;
  min-height: 64px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
  backdrop-filter: blur(10px);
  margin: 0;
  box-shadow: none;
}

.top-header,
header.app-header,
.app-topbar {
  height: 64px !important;
  min-height: 64px !important;
  padding: 8px 24px !important;
  margin: 0 !important;
  box-shadow: none !important;
}

.top-spacer,
.big-spacer,
.header-spacer {
  display: none !important;
  height: 0 !important;
  margin: 0 !important;
  padding: 0 !important;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  font-size: 14px;
}

.status-indicator.ready { color: var(--secondary); }
.status-indicator.loading { color: var(--warning); }
.status-indicator.error { color: var(--primary); }

.theme-selector {
  display: flex;
  align-items: center;
  gap: 12px;
}

.info-button {
  background: none;
  border: none;
  color: var(--muted);
  cursor: pointer;
  padding: 8px;
  border-radius: 50%;
  transition: var(--transition);
  font-size: 18px;
}

.info-button:hover {
  background: rgba(0, 174, 239, 0.1);
  color: var(--accent);
}

.main-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding: 72px 24px 48px 0;
  margin-left: 24px;
}

.energy-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.energy-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
}

.energy-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--secondary), var(--warning));
  opacity: 0;
  transition: var(--transition);
}

.energy-card:hover::before {
  opacity: 1;
}

.section-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 1rem;
  position: relative;
  padding-bottom: 0.5rem;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), var(--accent));
  border-radius: 2px;
}

.kpi-row {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  align-items: stretch;
  margin-bottom: 2rem;
}

.kpi-card {
  background: var(--paper);
  border-radius: 18px;
  box-shadow: 0 12px 32px rgba(15, 23, 42, 0.08);
  padding: 18px 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  justify-content: center;
  align-items: flex-start;
  transition: var(--transition);
  border: 1px solid rgba(30, 144, 255, 0.12);
  min-height: 118px;
  flex: 1 1 220px;
  min-width: 220px;
}

.kpi-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 48px rgba(15, 23, 42, 0.12);
}

.kpi-title,
.kpi-label {
  font-size: 0.82rem;
  font-weight: 600;
  color: rgba(71, 85, 105, 0.9);
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.kpi-value,
.kpi-card .value {
  font-size: 1.85rem;
  font-weight: 700;
  color: var(--primary);
}

.kpi-card .icon {
  font-size: 2rem;
  display: none;
}

.overview-hero {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: stretch;
  gap: 28px;
  background: linear-gradient(135deg, rgba(30, 144, 255, 0.12), rgba(0, 179, 134, 0.12));
  border: 1px solid rgba(30, 144, 255, 0.18);
  border-radius: 24px;
  padding: 28px 32px;
  margin-bottom: 32px;
  box-shadow: 0 18px 40px rgba(30, 144, 255, 0.08);
}

.hero-copy {
  flex: 1 1 320px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.hero-label {
  font-size: 0.8rem;
  letter-spacing: 0.3em;
  text-transform: uppercase;
  color: rgba(11, 77, 136, 0.8);
}

.hero-title {
  margin: 0;
  font-size: 1.85rem;
  font-weight: 700;
  color: #0f172a;
}

.hero-text {
  margin: 0;
  color: rgba(15, 23, 42, 0.78);
  font-size: 1rem;
}

.hero-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.hero-chip {
  background: rgba(11, 77, 136, 0.12);
  color: #0b4d88;
  padding: 6px 14px;
  border-radius: 999px;
  font-weight: 600;
  font-size: 0.85rem;
  letter-spacing: 0.02em;
}

.hero-stats {
  flex: 1 1 240px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 16px;
}

.hero-stat-card {
  background: rgba(255, 255, 255, 0.92);
  border-radius: 18px;
  padding: 18px;
  border: 1px solid rgba(11, 77, 136, 0.12);
  box-shadow: 0 8px 24px rgba(12, 74, 110, 0.12);
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.hero-stat-label {
  font-size: 0.8rem;
  font-weight: 600;
  color: rgba(15, 23, 42, 0.62);
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.hero-stat-value {
  font-size: 1.9rem;
  font-weight: 700;
  color: #0b4d88;
}

.hero-stat-footer {
  font-size: 0.85rem;
  color: rgba(15, 23, 42, 0.6);
}

.kpi-card.demand .icon { color: var(--secondary); }
.kpi-card.demand .value { color: var(--secondary); }
.kpi-card.pv .icon { color: var(--warning); }
.kpi-card.pv .value { color: var(--warning); }
.kpi-card.storage .icon { color: var(--muted); }
.kpi-card.storage .value { color: var(--muted); }
.kpi-card.grid .icon { color: var(--primary); }
.kpi-card.grid .value { color: var(--primary); }

.energy-button {
  background: linear-gradient(135deg, var(--primary), var(--accent));
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: var(--radius);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow);
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.energy-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
  background: linear-gradient(135deg, var(--accent), var(--primary));
}

.energy-button:active {
  transform: translateY(0);
}

.toggle-radio {
  display: flex;
  gap: 8px;
  margin: 1rem 0;
}

.toggle-radio .radio-item {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid var(--neutral);
  border-radius: var(--radius);
  background: var(--paper);
  cursor: pointer;
  transition: var(--transition);
  text-align: center;
  font-weight: 600;
  color: var(--muted);
}

.toggle-radio .radio-item.active {
  border-color: var(--primary);
  background: rgba(31, 119, 180, 0.1);
  color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.2);
}

.toggle-radio .radio-item:hover {
  border-color: var(--accent);
  transform: translateY(-1px);
}

.page-body-compact {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-top: 8px;
}

.page-row {
  gap: 24px;
}

.control-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  min-height: 100%;
}

.stat-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 16px;
}

.stat-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1rem 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.stat-title {
  font-size: 0.85rem;
  color: var(--muted);
  font-weight: 600;
  letter-spacing: 0.02em;
}

.stat-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
}

.radio-toggle {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.radio-toggle label {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 14px;
  border-radius: var(--radius);
  border: 1.5px solid var(--neutral);
  font-weight: 600;
  color: var(--muted);
  background: var(--paper);
  cursor: pointer;
  transition: var(--transition);
}

.radio-toggle label:hover {
  border-color: var(--accent);
  color: var(--primary);
}

.radio-toggle label:has(input[type="radio"]:checked) {
  border-color: var(--primary);
  color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.15);
}

.radio-toggle input[type="radio"] {
  accent-color: var(--primary);
}

.data-figures {
  display: flex;
  flex-wrap: wrap;
  gap: 18px;
  align-items: flex-start;
}

.figure-card {
  flex: 1 1 48%;
  min-width: 320px;
  background: var(--paper);
  border-radius: 14px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
  padding: 12px;
  box-sizing: border-box;
  overflow: hidden;
  border: 1px solid rgba(30, 144, 255, 0.08);
}

.figure-card .js-plotly-plot,
.figure-card .plotly-graph-div {
  width: 100% !important;
  height: 100% !important;
  max-height: 520px;
}
.clean-log li {
  background: rgba(31, 119, 180, 0.06);
  border-radius: var(--radius);
  padding: 12px 16px;
  border: 1px solid rgba(31, 119, 180, 0.1);
  font-size: 0.95rem;
  color: var(--text);
}

.summary-text {
  color: var(--muted);
  font-size: 0.92rem;
  line-height: 1.5;
}

.page-wrapper {
  padding-top: 12px !important;
}

.control-panel {
  padding: 12px;
  min-width: 260px;
}

.rounded {
  border-radius: 14px !important;
}

@media (max-width: 1200px) {
  .kpi-card {
    flex: 1 1 260px;
  }
  .hero-stats {
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  }
}

@media (max-width: 992px) {
  .kpi-card {
    flex: 1 1 calc(50% - 18px);
    min-width: 240px;
  }
  .figure-card {
    flex-basis: 100%;
    min-width: 100%;
  }
  .topbar {
    padding: 16px 24px;
    justify-content: center;
  }
  .topbar-meta {
    align-items: center;
  }
  .overview-hero {
    padding: 24px;
  }
}

@media (max-width: 640px) {
  .content {
    padding: 90px 20px 40px;
  }
  .topbar {
    gap: 16px;
  }
  .topbar-links {
    order: 3;
    width: 100%;
  }
  .topbar-meta {
    width: 100%;
    align-items: stretch;
    text-align: center;
    gap: 8px;
  }
  .topbar-palette {
    justify-content: center;
  }
  .hero-chips {
    gap: 8px;
  }
  .kpi-card {
    flex: 1 1 100%;
    min-width: 100%;
  }
  .hero-title {
    font-size: 1.5rem;
  }
}

.dropdown-modern {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid var(--neutral);
  border-radius: var(--radius);
  background: var(--paper);
  font-family: var(--font-family);
  font-size: 14px;
  color: var(--text);
  cursor: pointer;
  transition: var(--transition);
}

.dropdown-modern:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.1);
}

.dropdown-modern:hover {
  border-color: var(--accent);
}

.controls-section {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 1.5rem;
  border: 1px solid var(--neutral);
}

.controls-section .section-title {
  margin-top: 0;
}

.graph-container {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.graph-container:hover {
  box-shadow: var(--shadow-hover);
}

.graph-container .graph-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

.graph-container .graph-title::before {
  content: '📊';
  font-size: 1.25rem;
}

.insights-panel {
  position: fixed;
  right: 24px;
  top: 50%;
  transform: translateY(-50%);
  width: 300px;
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  z-index: 100;
  transition: var(--transition);
}

.insights-panel.collapsed {
  transform: translateY(-50%) translateX(calc(100% - 40px));
}

.insights-panel .toggle-btn {
  position: absolute;
  left: -40px;
  top: 50%;
  transform: translateY(-50%);
  background: var(--primary);
  color: white;
  border: none;
  width: 40px;
  height: 60px;
  border-radius: var(--radius) 0 0 var(--radius);
  cursor: pointer;
  font-size: 18px;
  transition: var(--transition);
}

.insights-panel .toggle-btn:hover {
  background: var(--accent);
}

.next-step-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: linear-gradient(135deg, var(--secondary), var(--warning));
  color: white;
  border: none;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  cursor: pointer;
  box-shadow: var(--shadow);
  transition: var(--transition);
  z-index: 100;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-step-btn:hover {
  transform: scale(1.1);
  box-shadow: var(--shadow-hover);
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(4px);
}

.modal-content {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  max-width: 600px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  padding: 2rem;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--neutral);
}

.modal-header h2 {
  margin: 0;
  color: var(--primary);
  font-size: 1.5rem;
}

.modal-close {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  color: var(--muted);
  padding: 4px;
  border-radius: 50%;
  transition: var(--transition);
}

.modal-close:hover {
  background: rgba(110, 119, 129, 0.1);
  color: var(--text);
}

.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid var(--neutral);
  border-radius: 50%;
  border-top-color: var(--primary);
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@media (max-width: 768px) {
  .app-shell {
    flex-direction: column;
    gap: 16px;
  }

  .sidebar {
    width: 100%;
    position: static;
  }

  .main-container {
    margin-left: 0;
    padding-left: 24px;
  }

  .kpi-row {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }

  .insights-panel {
    display: none;
  }
}

.controls {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.controls .dash-dropdown,
.controls .Select-control,
.controls .Select--multi,
.controls input,
.controls .dash-radioitems label,
.controls .DateRangePickerInput,
.controls .DateRangePickerInput .DateInput,
.controls .DateRangePickerInput .DateInput input {
  border-radius: var(--radius) !important;
  font-family: var(--font-family);
}

.controls .dash-radioitems label {
  padding: 8px 12px;
  background: rgba(31, 119, 180, 0.08);
  color: var(--primary);
  margin-right: 8px;
  border-radius: var(--radius);
}

.controls .dash-radioitems input[type="radio"] {
  margin-right: 6px;
}

.controls .dash-radioitems label:hover {
  background: rgba(31, 119, 180, 0.12);
}

.btn-primary {
  background: var(--primary);
  color: #fff;
  border: none;
  border-radius: var(--radius);
  padding: 10px 16px;
  font-weight: 600;
}

.btn-outline {
  background: var(--paper);
  color: var(--muted);
  border: 1px solid var(--neutral);
  border-radius: var(--radius);
  padding: 10px 16px;
  font-weight: 600;
}

.rounded {
  border-radius: var(--radius) !important;
}

.graph-card {
  padding: 16px;
}

.card + .card,
.panel + .panel {
  margin-top: 16px;
}

.dash-table-container .row {
  margin: 0;
}

.dash-table-container .dash-spreadsheet-container {
  border-radius: var(--radius);
  box-shadow: none;
  border: none;
}

.dash-table-container .dash-spreadsheet-container .dash-spreadsheet-inner {
  border-radius: var(--radius);
}

@media (max-width: 992px) {
  .app-shell {
    flex-direction: column;
  }
  .sidebar {
    width: auto;
  }
  .main-container {
    padding: 20px 16px 40px 16px;
  }
}

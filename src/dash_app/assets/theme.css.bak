:root {
  --radius: 16px;
  --shadow: 0 2px 10px rgba(0, 0, 0, 0.08);
  --shadow-hover: 0 4px 20px rgba(0, 0, 0, 0.12);
  --bg: #F8F9FA;
  --paper: #FFFFFF;
  --text: #212529;
  --muted: #6E7781;
  --primary: #1F77B4;
  --secondary: #2CA02C;
  --accent: #00AEEF;
  --warning: #F9A825;
  --neutral: #E9ECEF;
  --font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
  background-color: var(--bg);
  color: var(--text);
  font-family: var(--font-family);
  margin: 0;
  line-height: 1.5;
}

.app-shell {
  display: flex;
  gap: 24px;
  min-height: 100vh;
  background: var(--bg);
}

.sidebar {
  width: 280px;
  background: linear-gradient(135deg, rgba(31, 119, 180, 0.05) 0%, var(--paper) 100%);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: sticky;
  top: 24px;
  height: fit-content;
}

.sidebar .logo {
  font-weight: 700;
  font-size: 22px;
  letter-spacing: 0.02em;
  color: var(--primary);
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.sidebar-nav {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.sidebar-nav .nav-link {
  display: block;
  padding: 14px 18px;
  border-radius: var(--radius);
  text-decoration: none;
  font-weight: 600;
  color: var(--muted);
  background: transparent;
  transition: var(--transition);
  position: relative;
  border-left: 3px solid transparent;
}

.sidebar-nav .nav-link:hover {
  background: rgba(31, 119, 180, 0.08);
  color: var(--primary);
  transform: translateX(2px);
}

.sidebar-nav .nav-link.active {
  background: rgba(31, 119, 180, 0.12);
  color: var(--primary);
  border-left-color: var(--primary);
  box-shadow: 0 2px 8px rgba(31, 119, 180, 0.15);
}

.header-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: var(--paper);
  border-bottom: 1px solid var(--neutral);
  box-shadow: var(--shadow);
  padding: 12px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
  backdrop-filter: blur(10px);
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  font-size: 14px;
}

.status-indicator.ready { color: var(--secondary); }
.status-indicator.loading { color: var(--warning); }
.status-indicator.error { color: var(--primary); }

.theme-selector {
  display: flex;
  align-items: center;
  gap: 12px;
}

.info-button {
  background: none;
  border: none;
  color: var(--muted);
  cursor: pointer;
  padding: 8px;
  border-radius: 50%;
  transition: var(--transition);
  font-size: 18px;
}

.info-button:hover {
  background: rgba(0, 174, 239, 0.1);
  color: var(--accent);
}

.main-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding: 64px 24px 48px 0;
  margin-left: 24px;
}

.energy-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.energy-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
}

.energy-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--secondary), var(--warning));
  opacity: 0;
  transition: var(--transition);
}

.energy-card:hover::before {
  opacity: 1;
}

.section-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 1rem;
  position: relative;
  padding-bottom: 0.5rem;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), var(--accent));
  border-radius: 2px;
}

.kpi-row {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  margin-bottom: 2rem;
}

.kpi-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 1.5rem;
  text-align: center;
  transition: var(--transition);
  border: 1px solid var(--neutral);
  position: relative;
  overflow: hidden;
}

.kpi-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-hover);
}

.kpi-card .icon {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  display: block;
}

.kpi-card .value {
  font-size: 2rem;
  font-weight: 800;
  color: var(--primary);
  margin-bottom: 0.25rem;
  transition: var(--transition);
}

.kpi-card .label {
  font-size: 0.875rem;
  color: var(--muted);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.kpi-card.demand .icon { color: var(--secondary); }
.kpi-card.demand .value { color: var(--secondary); }
.kpi-card.pv .icon { color: var(--warning); }
.kpi-card.pv .value { color: var(--warning); }
.kpi-card.storage .icon { color: var(--muted); }
.kpi-card.storage .value { color: var(--muted); }
.kpi-card.grid .icon { color: var(--primary); }
.kpi-card.grid .value { color: var(--primary); }

.energy-button {
  background: linear-gradient(135deg, var(--primary), var(--accent));
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: var(--radius);
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow);
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.energy-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
  background: linear-gradient(135deg, var(--accent), var(--primary));
}

.energy-button:active {
  transform: translateY(0);
}

.toggle-radio {
  display: flex;
  gap: 8px;
  margin: 1rem 0;
}

.toggle-radio .radio-item {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid var(--neutral);
  border-radius: var(--radius);
  background: var(--paper);
  cursor: pointer;
  transition: var(--transition);
  text-align: center;
  font-weight: 600;
  color: var(--muted);
}

.toggle-radio .radio-item.active {
  border-color: var(--primary);
  background: rgba(31, 119, 180, 0.1);
  color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.2);
}

.toggle-radio .radio-item:hover {
  border-color: var(--accent);
  transform: translateY(-1px);
}

.page-body-compact {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-top: 8px;
}

.page-row {
  gap: 24px;
}

.control-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  min-height: 100%;
}

.stat-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 16px;
}

.stat-card {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1rem 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.stat-title {
  font-size: 0.85rem;
  color: var(--muted);
  font-weight: 600;
  letter-spacing: 0.02em;
}

.stat-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
}

.radio-toggle {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.radio-toggle label {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 14px;
  border-radius: var(--radius);
  border: 1.5px solid var(--neutral);
  font-weight: 600;
  color: var(--muted);
  background: var(--paper);
  cursor: pointer;
  transition: var(--transition);
}

.radio-toggle label:hover {
  border-color: var(--accent);
  color: var(--primary);
}

.radio-toggle label:has(input[type="radio"]:checked) {
  border-color: var(--primary);
  color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.15);
}

.radio-toggle input[type="radio"] {
  accent-color: var(--primary);
}

.clean-log {
  list-style: none;
  padding-left: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.clean-log li {
  background: rgba(31, 119, 180, 0.06);
  border-radius: var(--radius);
  padding: 12px 16px;
  border: 1px solid rgba(31, 119, 180, 0.1);
  font-size: 0.95rem;
  color: var(--text);
}

.summary-text {
  color: var(--muted);
  font-size: 0.92rem;
  line-height: 1.5;
}

.dropdown-modern {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid var(--neutral);
  border-radius: var(--radius);
  background: var(--paper);
  font-family: var(--font-family);
  font-size: 14px;
  color: var(--text);
  cursor: pointer;
  transition: var(--transition);
}

.dropdown-modern:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(31, 119, 180, 0.1);
}

.dropdown-modern:hover {
  border-color: var(--accent);
}

.controls-section {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 1.5rem;
  border: 1px solid var(--neutral);
}

.controls-section .section-title {
  margin-top: 0;
}

.graph-container {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.graph-container:hover {
  box-shadow: var(--shadow-hover);
}

.graph-container .graph-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 8px;
}

.graph-container .graph-title::before {
  content: 'ðŸ“Š';
  font-size: 1.25rem;
}

.insights-panel {
  position: fixed;
  right: 24px;
  top: 50%;
  transform: translateY(-50%);
  width: 300px;
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border: 1px solid var(--neutral);
  padding: 1.5rem;
  z-index: 100;
  transition: var(--transition);
}

.insights-panel.collapsed {
  transform: translateY(-50%) translateX(calc(100% - 40px));
}

.insights-panel .toggle-btn {
  position: absolute;
  left: -40px;
  top: 50%;
  transform: translateY(-50%);
  background: var(--primary);
  color: white;
  border: none;
  width: 40px;
  height: 60px;
  border-radius: var(--radius) 0 0 var(--radius);
  cursor: pointer;
  font-size: 18px;
  transition: var(--transition);
}

.insights-panel .toggle-btn:hover {
  background: var(--accent);
}

.next-step-btn {
  position: fixed;
  bottom: 24px;
  right: 24px;
  background: linear-gradient(135deg, var(--secondary), var(--warning));
  color: white;
  border: none;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  cursor: pointer;
  box-shadow: var(--shadow);
  transition: var(--transition);
  z-index: 100;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-step-btn:hover {
  transform: scale(1.1);
  box-shadow: var(--shadow-hover);
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(4px);
}

.modal-content {
  background: var(--paper);
  border-radius: var(--radius);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  max-width: 600px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  padding: 2rem;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--neutral);
}

.modal-header h2 {
  margin: 0;
  color: var(--primary);
  font-size: 1.5rem;
}

.modal-close {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  color: var(--muted);
  padding: 4px;
  border-radius: 50%;
  transition: var(--transition);
}

.modal-close:hover {
  background: rgba(110, 119, 129, 0.1);
  color: var(--text);
}

.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid var(--neutral);
  border-radius: 50%;
  border-top-color: var(--primary);
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@media (max-width: 768px) {
  .app-shell {
    flex-direction: column;
    gap: 16px;
  }

  .sidebar {
    width: 100%;
    position: static;
  }

  .main-container {
    margin-left: 0;
    padding-left: 24px;
  }

  .kpi-row {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }

  .insights-panel {
    display: none;
  }
}

.controls {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.controls .dash-dropdown,
.controls .Select-control,
.controls .Select--multi,
.controls input,
.controls .dash-radioitems label,
.controls .DateRangePickerInput,
.controls .DateRangePickerInput .DateInput,
.controls .DateRangePickerInput .DateInput input {
  border-radius: var(--radius) !important;
  font-family: var(--font-family);
}

.controls .dash-radioitems label {
  padding: 8px 12px;
  background: rgba(31, 119, 180, 0.08);
  color: var(--primary);
  margin-right: 8px;
  border-radius: var(--radius);
}

.controls .dash-radioitems input[type="radio"] {
  margin-right: 6px;
}

.controls .dash-radioitems label:hover {
  background: rgba(31, 119, 180, 0.12);
}

.btn-primary {
  background: var(--primary);
  color: #fff;
  border: none;
  border-radius: var(--radius);
  padding: 10px 16px;
  font-weight: 600;
}

.btn-outline {
  background: var(--paper);
  color: var(--muted);
  border: 1px solid var(--neutral);
  border-radius: var(--radius);
  padding: 10px 16px;
  font-weight: 600;
}

.rounded {
  border-radius: var(--radius) !important;
}

.graph-card {
  padding: 16px;
}

.card + .card,
.panel + .panel {
  margin-top: 16px;
}

.dash-table-container .row {
  margin: 0;
}

.dash-table-container .dash-spreadsheet-container {
  border-radius: var(--radius);
  box-shadow: none;
  border: none;
}

.dash-table-container .dash-spreadsheet-container .dash-spreadsheet-inner {
  border-radius: var(--radius);
}

@media (max-width: 992px) {
  .app-shell {
    flex-direction: column;
  }
  .sidebar {
    width: auto;
  }
  .main-container {
    padding: 20px 16px 40px 16px;
  }
}
